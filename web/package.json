{
  "name": "gearbox-analyzer-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/gearbox-analyzer",
    "build": "npm run build --workspace=packages/drivetrain-sim && npm run build --workspace=apps/gearbox-analyzer",
    "test": "npm run test --workspace=packages/drivetrain-sim",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
